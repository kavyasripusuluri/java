import java.io.*;
import java.util.*;
class Circle_Area1{
    double r;
    double area(){
        return (22/7.0)*r*r;
    }
}

class CircleMain{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        Circle_Area1 ca1 = new Circle_Area1();
        Circle_Area1 ca2 = new Circle_Area1();
        System.out.println("Enter the center of 1st circle:");
        ca1.r = sc.nextDouble();
        System.out.println("Enter the center of 2nd circle:");
        ca2.r = sc.nextDouble();
        System.out.println("Area of 1st circle is"+ca1.area());
        System.out.println("Area of 2nd circle is"+ca2.area());
    }
}

